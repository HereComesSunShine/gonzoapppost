<!DOCTYPE html>
<html>
  <head>
    <title>gonzo</title>
    
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Gonzo App", root_path, id: "logo" %>
        
        <nav>
          <ul class="nav nav-tabs">
            <li  role="presentation"><%= link_to "Home", root_path %></li>
            <li role="presentation"><%= link_to "About", about_path %></li>
            
            <% if logged_in? %>
          <li role="presentation"><%= link_to "Users", users_path %></li>  
          <li role="presentation"><%= link_to "Profile", current_user %></li>
          <li role="presentation"><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li role="presentation"><%= link_to "Log out", logout_path, method: "delete" %></li>


          <% else %>
          <li role="presentation"><%= link_to "Log in", login_path %></li>
        <% end %>

          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
          <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= yield %>
    </div>
    <footer class="footer">
  <small>
    The <a>Zachetka</a>
    by <a>Lexa</a>
  </small>
  <nav>
    <ul>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Contact", contact_path %></li>
      </ul>
  </nav>
</footer>
  </body>
</html>
